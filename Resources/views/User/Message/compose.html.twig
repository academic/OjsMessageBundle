{% extends 'OjstrMessageMessageBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = ojstr_message_message.message.compose.layout_template %}


{% block javascripts %}
	{{ parent() }}
<script src="{{- asset('bundles/ccdncomponentbbcode/js/jquery.bbeditor.js') -}}" type="text/javascript"></script>
{% endblock %}

{% block title %}{{- 'title.message.compose' |trans({}, 'OjstrMessageMessageBundle') |slice(0, ojstr_message_message.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

<section>
		{%- form_theme form ojstr_message_message.message.compose.form_theme -%}
    <form action="{{- path('ojstr_message_message_user_mail_compose') -}}"
          method="post" {{ form_enctype(form) }} class="form-horizontal" role="form">
        <fieldset>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <h4>{{- 'title.message.compose' |trans({}, 'OjstrMessageMessageBundle') -}}</h4>
                </div>
            </div>

				{{- form_errors(form) -}}

				{{- form_widget(form) -}}

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" class="btn btn-primary" name="submit[send]">
							{{- 'form.button.send' | trans({}, 'OjstrMessageMessageBundle') -}}
                    </button>

                    <button type="submit" class="btn btn-default" name="submit[preview]">
							{{- 'form.button.preview' | trans({}, 'OjstrMessageMessageBundle') -}}
                    </button>

                    <a href="{{- path('ojstr_message_message_user_folder_show', {'folderName': 'inbox' }) -}}" class="btn btn-default">
							{{- 'form.button.cancel' |trans({}, 'OjstrMessageMessageBundle') -}}
                    </a>
                </div>
            </div>
        </fieldset>
    </form>
</section>

	{%- if preview is not empty -%}
<section>
			{%- include 'OjstrMessageMessageBundle:User:Message/Partial/item_preview.html.twig' with {'message': preview } -%}
</section>
	{%- endif -%}

	{%- endspaceless -%}

{% endblock body_content %}
