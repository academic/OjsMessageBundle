{% extends 'OjstrMessageMessageBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = ojstr_message_message.folder.show.layout_template %}

{% block title %}{{- 'title.message.index' |trans({'%folder_name%': current_folder.getName |title }, 'OjstrMessageMessageBundle') |slice(0, ojstr_message_message.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

<section>
    <form method="POST" action="{{- path('ojstr_message_message_user_folder_mail_bulk_action', {'folderName': current_folder.getName()}) -}}" class="form-inline">
        <div class="btn-toolbar">
					{%- include 'OjstrMessageMessageBundle:User:Folder/Partial/folder_actions.html.twig' -%}
        </div>

				{{- knp_pagination_render(pager) -}}

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 16px;"></th>
                    <th style="width: 16px;"><i class="glyphicon glyphicon-flag"></i></th>
                    <th style="width: 16px;"><i class="glyphicon glyphicon-inbox"></i></th>
                    <th style="width: 16px;"><i class="glyphicon glyphicon-eye-open"></i></th>
                    <th style="width: 60px;">{{- ((current_folder.name == 'sent') ? 'generic.thead.to' :'generic.thead.from') | trans({}, 'OjstrMessageMessageBundle') -}}</th>
                    <th>{{- 'generic.thead.subject' | trans({}, 'OjstrMessageMessageBundle') -}}</th>
                    <th style="width: 140px;">{{- 'generic.thead.sent' | trans({}, 'OjstrMessageMessageBundle') -}}</th>
                </tr>
            </thead>
            <tbody>
						{%- for row, envelope in pager.getItems() -%}
							{%- set message = envelope.getMessage() -%}
							{%- include 'OjstrMessageMessageBundle:User:Folder/Partial/item_message.html.twig' with {'message': message} -%}
						{%- else -%}
                <tr>
                    <td colspan="8" class="center">
									{{- 'generic.message.none' | trans({}, 'OjstrMessageMessageBundle') -}}
                    </td>
                </tr>
						{%- endfor -%}
            </tbody>
        </table>

				{{- knp_pagination_render(pager) -}}

    </form>
</section>

	{%- endspaceless -%}

{% endblock body_content %}
